{
  "name": "shakespokemon-api",
  "version": "1.0.0",
  "description": "Shakespearean pokemon database ",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "dev": "ts-node-dev --respawn --inspect=0.0.0.0 -- ./src/app.ts",
    "lint": "eslint ./src ./features --ext .ts",
    "lint:fix": "eslint ./src ./features --ext .ts --fix",
    "test:unit": "jest",
    "test:features": "cucumber-js --require-module ts-node/register --require 'features/step_definitions/**/*.ts'",
    "test:coverage": "jest unit --coverage",
    "start": "node src/app.js"
  },
  "keywords": [
    "shakesperean",
    "pokemon",
    "translator"
  ],
  "author": "Emanuele Menon <emnlmn@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/assert": "^1.5.1",
    "@types/cucumber": "^6.0.1",
    "@types/got": "^9.6.11",
    "@types/jest": "^26.0.4",
    "@types/restify": "^8.4.2",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "assert": "^2.0.0",
    "cucumber": "^6.0.5",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-typescript": "^8.0.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "got": "^11.5.0",
    "restify": "^8.5.1"
  }
}
